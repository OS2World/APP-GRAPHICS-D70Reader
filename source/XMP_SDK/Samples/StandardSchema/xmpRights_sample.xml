<?xpacket begin='' id='W5M0MpCehiHzreSzNTczkc9d'?>
<x:xmpmeta xmlns:x='adobe:ns:meta/' x:xmptk='XMPTk 2.8'>

<rdf:RDF xmlns:rdf='http://www.w3.org/1999/02/22-rdf-syntax-ns#'
 xmlns:iX='http://ns.adobe.com/iX/1.0/'>

  <!-- Most applications will have an empty about attribute. -->
  <!-- It is recommended, however, that the about attribute  -->
  <!-- be set to the DocumentID or InstanceID.               -->

  <rdf:Description about=''
   xmlns:xmpRights='http://ns.adobe.com/xap/1.0/rights/'>

  <xmpRights:Certificate>http://www.foo.com/myCertificate</xmpRights:Certificate>

  <xmpRights:Copyright>  <!-- an alias of dc:rights -->
    <rdf:Alt>
      <!-- The character entity &apos; is used instead of the  -->
      <!-- special character apostrophe since the XMP Toolkit  -->
      <!-- converts all special characters to their equivalent -->
      <!-- character entities when serializing the metadata.   -->
      <rdf:li xml:lang='en'>This is a copyright notice</rdf:li>
      <rdf:li xml:lang='fr'>C&apos;est une notification de copyright</rdf:li>
      <rdf:li xml:lang='de'>Dieses ist ein Urheberrechtsvermerk</rdf:li>
    </rdf:Alt>
  </xmpRights:Copyright>

  <xmpRights:Marked>False</xmpRights:Marked>

  <xmpRights:Owner>
    <rdf:Bag>
      <rdf:li>Jane Doe</rdf:li>
      <rdf:li>John Doe</rdf:li>
      <rdf:li>Jack Doe</rdf:li>
    </rdf:Bag>
  </xmpRights:Owner>

  <xmpRights:UsageTerms>
    <rdf:Alt>
      <!-- The following text contains Unicode characters. Note that    -->
      <!-- the XMPDumper is not able to display all of them.            --> 
      <rdf:li xml:lang='en'>This document can be legally used</rdf:li>
      <rdf:li xml:lang='fr'>Ce document peut être légalement utilisé</rdf:li>
      <rdf:li xml:lang='de'>Dieses Dokument kann erlaubterweise benutzt werden</rdf:li>
    </rdf:Alt>
  </xmpRights:UsageTerms>

  <xmpRights:WebStatement>http://www.foo.com/myRightsStatement</xmpRights:WebStatement>

  </rdf:Description>

</rdf:RDF>

</x:xmpmeta>
<?xpacket end='r'?>

